using System;
namespace pr7
{
    public class MyDisk
    {
        public static string Getting_Info_about_disk()
        {
            Console.SetCursorPosition(50, 0);
            Console.WriteLine("Ваши диски:");
            Thread.Sleep(2500);
            return "";
        }
        public static void Strelki()
        {
            ConsoleKeyInfo key = Console.ReadKey();
            while (key.Key != ConsoleKey.Escape)
            {

                if (key.Key == ConsoleKey.DownArrow)
                {
                    Programm.position++;

                }
                else if (key.Key == ConsoleKey.UpArrow)
                {
                    Programm.position--;

                }
                if (Programm.position < 1)
                {
                    Programm.position = 6;
                }
                if (Programm.position > 6)
                {
                    Programm.position = 1;
                }

            }
        }
    }
}

